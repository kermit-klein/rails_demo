
<h1>-<%= @article.title %>-</h1>
<h4><%= @article.content %></h4>
<h6> Author : <%= @article.user.username %></h6>
<% if @article.user == current_user %>
<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-warning" %>
<%= link_to 'Delete', article_path(@article), method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure?"} %>
<% end %>
<%= link_to 'Back', articles_path, class:"btn btn-secondary" %>
